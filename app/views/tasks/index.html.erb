<h1>タスク一覧</h1>

<% if @tasks.any? %>
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>タスク内容</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td><%= link_to '詳細表示', task %></td>
            <td><%= link_to '編集する', edit_task_path(task) %></td>
            <td><%= link_to '削除する', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<br>

<%= link_to '新規タスクの投稿', new_task_path %>
